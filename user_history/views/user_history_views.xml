<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record model="ir.ui.view" id="user_history_tree_view">
            <field name="name">user_history.tree.view</field>
            <field name="model">user.history</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="user_id"/>
                    <field name="modification_user_id"/>
                    <field name="group_id"/>
                    <field name="old_value"/>
                    <field name="new_value"/>
                    <field name="group_name"/>
                </tree>
            </field>
        </record>


        <record model="ir.actions.act_window" id="user_history_action">
            <field name="name">User History</field>
            <field name="res_model">user.history</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="user_history.user_history_tree_view"/>
        </record>
        <menuitem action="user_history_action" name="Users History" id="menu_action_user_history"
                  parent="base.menu_users"/>


    </data>
</odoo>